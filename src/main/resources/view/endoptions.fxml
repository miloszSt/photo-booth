<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<!-- ewentualnie ScrollPane -->
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>
<BorderPane fx:id="borderPane"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.photobooth.controller.DisplayTemplateController"
            >
    <center>
        <StackPane fx:id="stackPane" />
    </center>
    <bottom>
        <HBox spacing="240">

            <StackPane onMouseClicked="#addSignature">
                <Circle fx:id="circle" centerX="500" centerY="500" stroke="#0003ff"
                        radius="100" >

                    <fill>
                        <Color green="0" blue="1"/>
                    </fill>
                </Circle>
                <Text style="-fx-font-size: 32px">PODPISZ SIE !</Text>
            </StackPane>

            <StackPane onMouseClicked="#print1">
                <Circle fx:id="circle2" centerX="500" centerY="500" stroke="#00ff04"
                        radius="100" >

                    <fill>
                        <Color red="0" green="1" blue="0"></Color>
                    </fill>
                </Circle>
                <Text style="-fx-font-size: 42px">
                    DRUKUJ 1
                </Text>
            </StackPane>
            <StackPane onMouseClicked="#print2">
                <Circle fx:id="circle3" centerX="500" centerY="500" stroke="#00ff04"
                        radius="100" >

                    <fill>
                        <Color red="0" green="1" blue="0"></Color>
                    </fill>
                </Circle>
                <Text style="-fx-font-size: 42px">
                    DRUKUJ 2
                </Text>
            </StackPane>
        </HBox>
    </bottom>
</BorderPane>